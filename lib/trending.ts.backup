// ğŸ“¦ Cache Logic
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
function getCachedTrends(persona?: string): TrendingTopic[] | null {
  const cacheKey = persona ? `trends_${persona}` : "twitter_trends";
  const cached = trendsCache.get(cacheKey);
  if (cached && Date.now() < cached.timestamp + cached.ttl) {
    console.log(`ğŸ“¦ Using cached trending topics for ${persona || 'general'}`);
    return cached.data;
  }
  // Force refresh for debugging
  console.log(`ğŸ”„ Cache expired or not found for ${persona || 'general'}, fetching fresh data`);
  return null;
}

function setCachedTrends(data: TrendingTopic[], persona?: string): void {
  const cacheKey = persona ? `trends_${persona}` : "twitter_trends";
  trendsCache.set(cacheKey, {
    data,
    timestamp: Date.now(),
    ttl: CACHE_TTL_MS,
  });
  console.log(`ğŸ’¾ Cached ${data.length} trending topics for ${persona || 'general'} for ${CACHE_TTL_MS / 60000} minutes`);
}

