{
  "version": 2,
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/cron/daily-tweets",
      "schedule": "30 19 * * 0-4"
    },
    {
      "path": "/api/cron/post-tweet", 
      "schedule": "*/5 * * * *"
    }
  ]
}